{
  "name": "@spwashi/spw",
  "version": "0.1.2",
  "description": "A parser and runtime for the Spw language",
  "license": "MIT",
  "scripts": {
    "linkall": "yarn link @spwashi/language",
    "test": "jest ./",
    "lint": "eslint src --ext .ts --fix",
    "tsc": "node ./node_modules/ttypescript/bin/tsc && ./node_modules/@babel/cli/bin/babel.js dist -d dist",
    "prebuild": "yarn test && yarn run build:parser",
    "build": "yarn tsc",
    "build:parser": "ts-node -r tsconfig-paths/register src/parser/scripts/generate.ts;",
    "preenter:dist": "yarn run lint",
    "enter:dist": "cp -rf package.json dist; cd dist",
    "prepare": "yarn run build",
    "postpublish": "cd dist || true; cp -rf package.json ../"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spwashi/spw-js.git"
  },
  "dependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-proposal-optional-chaining": "^7.12.16",
    "@babel/plugin-proposal-private-methods": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.15",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@spwashi/language": "^1.4.4",
    "@types/jest": "^26.0.20",
    "dedent": "^0.7.0",
    "jest": "^26.6.3",
    "minimist": "^1.2.5",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@types/dedent": "^0.7.0",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.23.0",
    "lodash": "^4.17.21",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript-transform-paths": "^2.2.3"
  },
  "jest": {
    "moduleNameMapper": {
      "@constructs/(.*)": "<rootDir>/src/constructs/$1",
      "@grammar/(.*)": "<rootDir>/src/parser/grammar/$1"
    }
  }
}
